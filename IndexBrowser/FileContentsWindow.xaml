<Window x:Class="IndexBrowser.FileContentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndexBrowser"
        mc:Ignorable="d"
        Title="File Contents" Height="450" MinHeight="150" Width="650" MinWidth="650" MaxWidth="650">
    <Grid>
        <Label Content="Blob ID:" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>
        <TextBox Name="BlobId" Height="23" Margin="66,10,10,0" Padding="2,5,0,0" FontFamily="Lucida Console" Text="" IsReadOnly="True" VerticalAlignment="Top"/>

        <TextBox Name="Contents" Margin="10,45,10,10" FontFamily="Lucida Console" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
