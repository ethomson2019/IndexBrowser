        <Label Content="Flags:" HorizontalAlignment="Left" Margin="273,176,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Flags" HorizontalAlignment="Left" Height="23" Margin="328,178,0,0" Padding="2,5,0,0" Text="" VerticalAlignment="Top" Width="120" FontFamily="Lucida Console"/>

        <Button Name="OK" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Height="20" Margin="0,0,10,10"/>
    </Grid>
</Window>